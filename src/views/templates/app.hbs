<div class="pure-g">
  <div class="pure-u-1-1">
    <div class="splash-container">
      <i class="fas fa-gift fa-10x"></i>
      <h1>Gift Exchange</h1>
    </div>
  </div>
</div>

<div class="pure-g">
  <div class="pure-u-1-3">
  </div>

  <div class="pure-u-1-3">
    {{#unless isDrawDone}}
        {{> registrationSection }}
      {{#if isDrawValid}}
        {{> shuffleSection }}
      {{/if}}
      {{#unless isDrawValid}}
        {{> tipSection }}
      {{/unless}} 
    {{/unless}} 

    {{#if isDrawDone}}
      {{> actionsSection }}
    {{/if}}
  </div>

  <div class="pure-u-1-3">
  </div>
</div>

<div class="pure-g">
  <div class="pure-u-1-3">
  </div>

  <div class="pure-u-1-3">
    {{#if familyMembers}} 
      {{#unless isDrawDone}}
        {{> memberListSection }}
      {{/unless}} 

      {{#if isDrawDone}}
        {{> resultsSection }}
      {{/if}} 
    {{/if}}
  </div>

  <div class="pure-u-1-3">
  </div>
</div>