<div class="pure-g">
  <div class="pure-u-1-1">
    <div class="splash-container">
      <i class="fas fa-gift fa-10x"></i>
      <h1>Gift Exchange</h1>
    </div>
  </div>

  <div class="pure-u-1-3">
  </div>

  <div class="pure-u-1-3">
    <section class="member-registration-section">
      <form class="pure-form" id="member-registration-form">
        <fieldset>
          <legend>Add a family member</legend>
          <input type="text" id="name" placeholder="Name" required />
          <input type="text" id="spouse" placeholder="(Optional) Spouse" />
          <button type="submit" class="pure-button pure-button-primary">Add member</button>
        </fieldset>
      </form>
    </section>

    <section class="member-list-section">
      <h3>Family Members</h3>
      <table class="pure-table pure-table-bordered">
        <tbody id="member-list">
          {{#if familyMembers}} {{#each familyMembers}}
          <tr id={{name}}>
            <td>
              <span class="member-list-name">{{name}}</span>
              {{#if spouse}} (
              <i class="fas fa-heart"></i> {{spouse}}) {{/if}}
            </td>
            </td>
            <td class="member-list-icon">
              <i class="fas fa-times" data-name={{name}}></i>
            </td>
          </tr>
          {{/each}} {{else}}
          <tr>No members found, add some folks first.
            <br/>
            <span class="pro-tip">If you're alone you can still buy a
              <i class="fas fa-gift"></i> to yourself
            </span>
          </tr>
          {{/if}}
        </tbody>
      </table>
    </section>

    <section class="shuffle-section">
      <button class="pure-button button-xlarge button-shuffle">Shuffle
        <i class="fas fa-random"></i>
      </button>
    </section>
  </div>

  <div class="pure-u-1-3">
  </div>
</div>